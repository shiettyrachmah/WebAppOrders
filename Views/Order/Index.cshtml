@{
    ViewData["Title"] = "Order Page";
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
<script language="javascript" type="text/javascript" src="~/js/Script/order.js"></script>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1 class="mt-4 mb-2">Order List</h1>
            </div>
            <div>
                <div class="row">
                    <div class="card col-sm-8 mb-3">
                        <div class="card-body">
                            <table class="inputs">
                                <tbody>
                                    <tr>
                                        <td>Order No:</td>
                                        <td><input type="text" id="txtOrderID" name="txtOrderID"></td>
                                    </tr>
                                    <tr>
                                        <td>Customer Name:</td>
                                        <td><select id="ddlCustomer" name="ddlCustomer"></select> </td>
                                    </tr>
                                    <tr>
                                        <input type="hidden" id="isAdmin" value="@ViewData["IsAdmin"]" />
                                        <td><button type="button" class="btn btn-primary" id="btnSearch">Filter</button></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="card col-sm-1" style="margin-top:80px; margin-left:225px; border:0px;">
                        <div class="card-body">
                            <div>
                                <button type="button" class="btn btn-primary" id="btnAdd">Add</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <!-- begin :: Datatable -->
            <div class="bs-component">
                <div class="col-sm-12">
                    <table class="table table-striped table-bordered dataTable" id="tblOrder" style="width:100%">
                        <thead>
                            <tr role="row">
                                <th class="sorting_asc" rowspan="1" colspan="1"><b>Order ID</b></th>
                                <th class="sorting_asc" rowspan="1" colspan="1"><b>Order Date</b></th>
                                <th class="sorting_asc" rowspan="1" colspan="1"><b>Customer Name</b></th>
                                <th class="sorting_asc" rowspan="1" colspan="1"><b>Ship Name</b></th>
                                <th class="sorting_asc" rowspan="1" colspan="1"><b>Total Price</b></th>
                                <th class="sorting_asc" rowspan="1" colspan="1"><b></b></th>
                            </tr>
                        </thead>
                        <tbody id="bodyTask"></tbody>
                    </table>
                </div>
            </div>
            <!-- end :: Datatable -->
            <!-- begin :: Modal -->
            <div class="modal fade bd-example-modal-lg" id="detailsorder" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Order Entry</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true"></span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label>Order ID</label>
                                    <input type="text" class="form-control" id="txtOrderID" placeholder="Order ID">
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Customer ID</label>
                                    <input type="text" class="form-control" id="txtCustomerID" placeholder="Customer ID">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label>Order Date</label>
                                    <input type="date" class="form-control" id="txtOrderDate" placeholder="Order Date">
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Company Name</label>
                                    <input type="text" class="form-control" id="txtCompanyName" placeholder="Company Name">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label>Required Date</label>
                                    <input type="date" class="form-control" id="txtRequiredDate" placeholder="Required Date">
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Address</label>
                                    <input type="text" class="form-control" id="txtAddress" placeholder="Address">
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label>ShipName</label>
                                    <input type="text" class="form-control" id="txtShipName" placeholder="Ship Name">
                                </div>
                                <div class="form-group col-md-6">
                                    <label>City</label>
                                    <input type="text" class="form-control" id="txtCity" placeholder="City">
                                </div>
                            </div>
                            <div class="row mt-lg-2">
                                <div class="form-group col-md-6">
                                </div>
                                <div class="form-group col-md-6">
                                    <button type="button" class="btn btn-success" id="btnAddItem">Add Item</button>
                                    <button type="button" class="btn btn-danger" id="btnDeleteItem">Delete Item</button>
                                    <button type="button" class="btn btn-info" id="btnSaveOrder">Save Order</button>
                                </div>
                            </div>
                            <div class="row mt-lg-3">
                                <!-- begin :: Datatable -->
                                <div class="bs-component">
                                    <div class="col-sm-12">
                                        <table class="table table-striped table-bordered dataTable" id="tblDetailOrder" style="width:100%">
                                            <thead>
                                                <tr role="row">
                                                    <th class="sorting_asc" rowspan="1" colspan="1"><b>Product ID</b></th>
                                                    <th class="sorting_asc" rowspan="1" colspan="1"><b>Product Name</b></th>
                                                    <th class="sorting_asc" rowspan="1" colspan="1"><b>Unit Price</b></th>
                                                    <th class="sorting_asc" rowspan="1" colspan="1"><b>Qty</b></th>
                                                    <th class="sorting_asc" rowspan="1" colspan="1"><b>Sub Total</b></th>
                                                </tr>
                                            </thead>
                                            <tbody id="bodyTask"></tbody>
                                        </table>
                                    </div>
                                </div>
                                <!-- end :: Datatable -->
                            </div>

                            <div class="modal-footer">
                                <div class="row">
                                    <div class="form-group col-md-2">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Total Price </label>
                                        <input type="text" id="totalPrice" class="form-control" style="width:200px;" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-1">
                                        <button type="button" class="btn btn-dark">Back</button>
                                    </div>
                                    <div class="form-group col-md-9" style="margin-left:600px;">
                                        <div></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end :: Modal -->
            </div>
        </div>
    </div>

